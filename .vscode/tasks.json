{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Backend Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev:backend"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Start Frontend Client",
			"type": "shell",
			"command": "npm",
			"args": ["start"],
			"options": {
				"cwd": "${workspaceFolder}/client"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Full Application",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev:full"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Install All Dependencies",
			"type": "shell",
			"command": "npm",
			"args": ["run", "install-all"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Build Application",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Seed Database",
			"type": "shell",
			"command": "npm",
			"args": ["run", "seed"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"problemMatcher": []
		}
	]
}